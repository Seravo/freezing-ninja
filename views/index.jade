extends layout
block content
  body
  if (!req.isAuthenticated())  
   hr  
   .jumbotron
    h1 Make your software even better!
    p.lead
     | Bounty project helps people .
    a.btn.btn-large.btn-success(href='/signup') Sign up today
    br
    a(href="/auth/facebook")
     img(src="pictures/facebook.png")
    a(href="/auth/google")
     img(src="pictures/grey_google_stamp.png")
    a(href="#")
     img(src="pictures/grey_twitter_stamp.png")
  hr 
  each bug in req.bugs
   div(class="well well-small;", style= "height:100px;")  
    div(style="float:left;") 
     b Title: 
     =  bug.bugName 
     | &nbsp;
     case bug.bountyStatus 
      when 'Open'  
       span.label.label-info(style="margin-right:5px")
        = bug.bountyStatus 
      when 'In Progress' 
       span.label.label-important(style="margin-right:5px")
        = bug.bountyStatus  
     span.badge.badge-warning  
      =bug.totalSum 
      | â‚¬   
     p
       b Description: 
       = bug.description  
       
     a.btn.btn-info(style="margin-top: 20px", href="/bug/" + bug._id) See bug      
    div(style="float: right")  
      p
       b Posted by:   
       a(href="/user/" + bug.author._id) 
        =bug.author.username
      img.img-rounded(style='width:75px; height:60px; float: right', src=bug.author.imagePath)
  .pagination.pagination-right
    ul
      - if (page > 0) {
      li
        a(href="?page=0") First
      li
        a(href="?page=" + (page - 1)) <<
      - }
      - if (page<lastPage) {     
      li
        a(href="?page=" + (page + 1)) >>
      li
        a(href="?page=" + lastPage) Last  
      - }  
  hr
  .footer
    p Â© The Wanderers 2013





