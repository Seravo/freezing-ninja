extends layout
block content
  body   
   h2.form-signin-heading All Bounties
   table.table.table-bordered
    thead 
     tr
      th Bonty  name
      th Description
      th Author
      th Status
      th Link
      th(style= "display:none") id
      th Created at
    tbody
    each bug in req.bugs 
     tr
      td 
       a(href="/bug/" + bug._id)
        = bug.bugName
      td
       p
        = bug.description
      td
        a(href="/user/"+bug.author._id)=bug.author.username
      td= bug.bountyStatus
      td
        a(href=bug.link)=bug.link
      td#rowId(style= "display:none")= bug.id
      td=bug.ts.toDateString()
